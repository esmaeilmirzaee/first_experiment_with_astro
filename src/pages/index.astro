---
const name = 'Astro';
const response = await fetch('https://jsonplaceholder.typicode.com/users?_limit=10');
const users = await response.json();
---

<h1 class="purple">Hello {name.toUpperCase()} &rarr;</h1>

{(users.length > 0) ?
	users.map((u) => (
		<li>{u.name}</li>
	))
: null}

<style>
	.purple {
		font-size: xx-large;
		color: #234567;
	}
</style>
