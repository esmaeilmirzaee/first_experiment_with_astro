---
const response = await fetch('https://jsonplaceholder.typicode.com/posts');
const posts = await response.json();
---

<h1 class='mx-auto text-6xl font-black text-indigo-600 p-10'>Blog</h1>
<div class='grid grid-cols-3 gap-5 mx-4'>
    {
        posts.map((p) => (
            <div class='col-span-1 p-10 rounded border border-indigo-600 cursor-pointer hover:shadow-sm hover:shadow-indigio-100'>
                <h1 class='text-xl font-black'>{p.title}</h1>
                <p class='my-10'>{p.body}</p>
                <a class='ml-auto mt-4 inline-block' href={`/${p.id}`}>
                    <span class='ml-auto cursor-pointer px-4 py-1  flex items-center hover:scale-110 border rounded border-indigo-500'>
                        Read more &rarr;
                    </span>
                </a>
            </div>
        ))
    }
</div>
